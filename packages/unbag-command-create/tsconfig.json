{
  "compilerOptions": {
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noEmitOnError": false,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "templates"
  ]
}